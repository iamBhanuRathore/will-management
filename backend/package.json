{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "lint-staged": "^15.2.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build ./src/index.ts ./src/vercel-entry.ts --outdir ./dist --target=node --minify",
    "vercel-build": "cp package.json dist/",
    "vercel-install": "npm install -g bun && bun install"
  },
  "vercel": {
    "functions": {
      "api/**/*.js": {
        "runtime": "nodejs20.x"
      }
    }
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@prisma/client": "^6.16.2",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "multicoin-address-validator": "^0.5.26",
    "pg": "^8.16.3",
    "prisma": "^6.16.2",
    "secrets.js-grempe": "^2.0.0",
    "tweetnacl": "^1.0.3",
    "zod": "^4.1.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bun test --findRelatedTests --passWithNoTests"
    ]
  },
  "version": "deploy"
}
