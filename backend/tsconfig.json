{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "noEmit": false, // ‚Üê MUST be false
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
